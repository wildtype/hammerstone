#!/usr/bin/env perl
use Mojolicious::Lite -signatures;
use Mojo::File 'path';
use YAML;
use utf8;
use Encode qw(encode_utf8 decode_utf8);

sub get_meta {
  my $file = shift;
  my $content = $file->slurp;

  my ($meta, $_excerpt, $_body) = Load($content);
  return {
    title => $meta->{title},
    slug => $meta->{slug},
    created_at => $meta->{created_at}
  };
}

sub all_posts {
  my $path = path('../site/posts');
  my @posts = $path
    ->list({dir => 1})
    ->map(\&get_meta);
  return @posts;
}

sub get_post {
  my $slug = shift;
  my $file = path('../site/posts/' . $slug . '.yml');
  my $content = decode_utf8($file->slurp);

  my ($meta, $excerpt, $body) = Load($content);

  if (!$body) {
    $body = $excerpt;
    $excerpt = undef;
  }

  return {
    title => $meta->{title},
    content => $body,
    excerpt => $excerpt
  };
}

get '/' => sub ($c) {$c->reply->static('index.html')};
get '/edit' => sub ($c) {$c->reply->static('edit.html')};
get '/new' => sub ($c) {$c->reply->static('new.html')};

get '/posts/:slug' => sub ($c) {
  my $slug = $c->param('slug');

  $c->render(json => get_post($slug));
};

get '/posts' => sub ($c) {
  my @listdir = all_posts;

  my $resp = {
    posts => @listdir
  };

  $c->render(json => $resp);
};

app->start;
